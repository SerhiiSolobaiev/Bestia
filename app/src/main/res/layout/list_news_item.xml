<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewFromJson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:adjustViewBounds="true"/>
    <ImageView
        android:id="@+id/imageViewPosterFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/news_poster_frame" />

    <ImageView
        android:id="@+id/imageViewPosterSprt0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/news_poster_sprt_0"
        android:visibility="visible"
        android:layout_margin="0dp" />

    <ImageView
        android:id="@+id/imageViewPosterSprt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/news_poster_sprt_1"
        android:visibility="gone"
        android:layout_margin="0dp" />
</RelativeLayout>